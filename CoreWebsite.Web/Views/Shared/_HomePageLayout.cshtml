@using CoreWebsite.Web.Areas.Identity.Data

@{
    Layout = "_Layout";
    ViewData["Title"] = "Page with second layout";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@{IgnoreBody();}

<div class="container">
    <div class="row">
        <div class="col-md-6 mb-2">
            <div class="card">
                <div class="card-header">Categories</div>
                <div class="card-body">
                    <h5 class="card-title">Categories page</h5>
                    <div class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</div>

                    <ul class="list-group">
                        <li class="list-group-item">
                            @Html.NorthwindImageLink(1, "Generated by Html Helper")
                        </li>
                        <li class="list-group-item">
                            <a northwind-id="1">Generated by Tag Helper</a>
                        </li>
                        <li class="list-group-item">
                            <a asp-action="Index" asp-controller="Products">Go products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <div class="card">
                <div class="card-header">Products</div>
                <div class="card-body">
                    <h5 class="card-title">Products page</h5>
                    <div class="card-text">
                        <a asp-action="Index" asp-controller="Categories">Go categories</a>
                    </div>
                </div>
            </div>
        </div>
        @if (User.IsInRole(Roles.Admin))
        {
            <div class="col-md-6" mb-2>
                <div class="card">
                    <div class="card-header">Administration</div>
                    <div class="card-body">
                        <a asp-action="Index" asp-controller="Administration">User Management</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section scripts {
    <script>
        console.log("Hello from scripts section");
    </script>
}